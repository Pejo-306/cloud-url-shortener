{
  "backend": {
    "host": "https://<aws-api-gateway-url>/dev",
    "endpoints": {
      "shorten": "/v1/shorten"
    },
    "_type": "aws-lambda",
    "timeout": 15000
  },
  "flags": {
    "isUsingJsonServer": false,
    "disableCaching": false
  },
  "hints": {
    "enterValidUrl": "Please enter a valid URL (e.g. https://example.com)",
    "timeout": 3000
  },
  "aws": {
    "cognito": {
      "userPoolId": "eu-central-1_e0ug41jxH",
      "clientId": "a5n9rukugmm1rrnl67tvvrvjt"
    }
  },
  "auth": {
    "passwordPolicy": {
      "minLength": 6,
      "requireUppercase": false,
      "requireLowercase": false,
      "requireNumbers": false,
      "requireSymbols": false
    },
    "errorMessages": {
      "loginFailed": "Login failed. Please try again.",
      "invalidEmail": "Invalid email address. Please try again.",
      "invalidPassword": "Invalid password. Please try again.",
      "passwordTooShort": "Password must be at least 6 characters long.",
      "passwordConfirmationMismatch": "Password confirmation does not match. Please try again.",
      "confirmRegistrationFailed": "Confirmation failed. Please try again."
    }
  }
}
